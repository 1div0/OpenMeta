@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

list(PREPEND CMAKE_MODULE_PATH "${CMAKE_CURRENT_LIST_DIR}")

if(@OPENMETA_CONFIG_HAS_ZLIB@)
  find_dependency(ZLIB)
endif()

if(@OPENMETA_CONFIG_HAS_BROTLI@)
  find_dependency(Brotli)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/OpenMetaTargets.cmake")

# Convenience alias: prefer shared when available, otherwise fall back to static.
if(NOT TARGET OpenMeta::openmeta)
  if(TARGET OpenMeta::openmeta_shared)
    add_library(OpenMeta::openmeta ALIAS OpenMeta::openmeta_shared)
  elseif(TARGET OpenMeta::openmeta_static)
    add_library(OpenMeta::openmeta ALIAS OpenMeta::openmeta_static)
  endif()
endif()
