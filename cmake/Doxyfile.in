PROJECT_NAME           = OpenMeta
PROJECT_BRIEF          = Format-agnostic metadata processing library

OUTPUT_DIRECTORY       = @OPENMETA_DOXYGEN_OUTPUT_DIR@

INPUT                  = @OPENMETA_DOXYGEN_INPUT@
FILE_PATTERNS          = *.h *.hpp *.md
RECURSIVE              = YES

MARKDOWN_SUPPORT       = YES
USE_MDFILE_AS_MAINPAGE = @OPENMETA_DOXYGEN_MAINPAGE@

